#Ej3
print("EJ 3")
x = "En un lugar de la Mancha, de cuyo nombre no quiero acordarme..."
encontrarA = re.findall(r"a", x)
cantidadA = len(encontrarA)
print(cantidadA)

#Ej4
print("EJ 4")
texto = " Mi gato est치 gordo"

# strip quita el espacio al principio
print("\nstrip:", texto.strip())

# split los separa 
palabras = texto.strip().split(" ")
print("\nsplit:", palabras)

# lower lo pone en minusculas
print("\nlower:", texto.strip().lower())

# upper lo pone en mayusculas
print("\nupper:", texto.strip().upper())

# find escuentra cu치ntas hay
posicion = texto.strip().find("a")
print("\nfind:", posicion)

# index te dice en que index est치 la primera
posicion = texto.strip().index("g")
print("\nindex:", posicion)

# startswith te dice si empieza por esa letra
resultado = texto.strip().startswith("M")
print("\nstartswith:", resultado)


